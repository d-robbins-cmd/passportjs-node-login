<%- include( 'partials/navigation' ) %>

<h3>Register</h3>

<!-- display errors if any -->
<% if ( locals.errors ) { %> 
    <ul>
        <% errors.forEach( error =>  { %>
            <li><%= error.message %></li>
        <% }) %>
    </ul>
<% } %>

<form action='/register' method="POST">
    <label>name</label>
    <input 
        type="text" 
        id="name" 
        name="name"
        value="<%= typeof name != 'undefined' ? name : '' %>"
        >
    <br>
    <label>email</label>
    <input 
        type="email" 
        id="email" 
        name="email"
        value="<%= typeof email != 'undefined' ? email : '' %>"
        >
    <br>
    <label>password</label>
    <input 
        type="password" 
        id="password" 
        name="password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
        >
        <br>
    <label>password 2</label>
    <input 
        type="password" 
        id="password2" 
        name="password2"
        value="<%= typeof password2 != 'undefined' ? password : '' %>"
        >
    <button type="submit">submit</button>
</form>


